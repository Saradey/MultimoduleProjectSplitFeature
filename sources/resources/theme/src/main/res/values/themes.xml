<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Design.NoActionBar" />

    <style name="AppTheme.Night">
        <item name="android:windowBackground">@color/dark_blue</item>
        <item name="main_text_color">@color/white</item>
        <item name="accent_text_color">@color/blueviolet</item>
        <item name="main_background_color">@color/black</item>
        <item name="accent_background_color">@color/lavender</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:windowBackground">@color/white</item>
        <item name="main_text_color">@color/black</item>
        <item name="accent_text_color">@color/cornflowerblue</item>
        <item name="main_background_color">@color/white</item>
        <item name="accent_background_color">@color/lavender</item>
    </style>

</resources>