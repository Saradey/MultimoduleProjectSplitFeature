<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppText" />

    <style name="AppText.MainText">
        <item name="android:textColor">?main_text_color</item>
        <item name="android:textSize">@dimen/sp_24</item>
    </style>

    <style name="AppText.AccentText">
        <item name="android:textColor">?accent_text_color</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="AppButton" />

    <style name="AppButton.MainButton" parent="AppText.MainText">
        <item name="android:background">?main_background_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppButton.AccentButton" parent="AppText.AccentText">
        <item name="android:background">?accent_background_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppBottomNavigationStyle">
        <item name="android:background">?accent_background_color</item>
    </style>
</resources>